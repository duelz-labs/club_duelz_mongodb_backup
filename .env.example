# MongoDB Connection
MONGO_URI=mongodb://username:password@hostname:port/database  # Example URI
DATABASE_NAME=your_database_name  # Name of the MongoDB database to back up

# Backup Settings
BACKUP_DIR=backup  # Directory where backups will be stored
BACKUP_FORMAT=jsonl  # Format of the backup files (e.g., jsonl, bson, etc.)
BATCH_SIZE=500  # Number of documents processed in each batch during backup
COMPRESS_BACKUPS=true  # Set to true if you want backups to be compressed
COMPRESSION_LEVEL=6  # Compression level (1-9, 9 being the highest)
REMOVE_AFTER_COMPRESSION=true  # Set to true if you want the original file removed after compression

# Google Drive Configuration
GOOGLE_DRIVE_ENABLED=true  # Set to true if you want to upload backups to Google Drive
GOOGLE_CREDENTIALS_PATH=/path/to/credentials.json  # Path to your Google Drive API credentials JSON file
GOOGLE_DRIVE_FOLDER_ID=  # Folder ID in Google Drive to upload backups

# Logging Configuration
LOG_LEVEL=INFO  # Logging level (e.g., DEBUG, INFO, WARN, ERROR)
LOG_FILE=backup.log  # Path to the log file where logs will be stored
